<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl33"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl66"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="100dp"
            android:id="@+id/ansColor1"
            app:layout_constraintTop_toBottomOf="@id/tvColor4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl33"
            android:background="#000000"
            >
        </View>

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="100dp"
            android:id="@+id/ansColor2"
            app:layout_constraintTop_toBottomOf="@id/tvColor4"
            app:layout_constraintStart_toStartOf="@id/gl33"
            app:layout_constraintEnd_toEndOf="@id/gl66"
            android:background="#000000"
            >
        </View>

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="100dp"
            android:id="@+id/ansColor3"
            app:layout_constraintTop_toBottomOf="@id/tvColor4"
            app:layout_constraintStart_toStartOf="@id/gl66"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#000000"
            >
        </View>

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:id="@+id/ansColor5"
            app:layout_constraintTop_toBottomOf="@id/ansColor1"
            app:layout_constraintStart_toStartOf="@id/gl33"
            app:layout_constraintEnd_toEndOf="@id/gl66"
            android:background="#000000"
            >
        </View>

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:id="@+id/ansColor4"
            app:layout_constraintTop_toBottomOf="@id/ansColor1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl33"
            android:background="#000000"
            >
        </View>

        <View
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:id="@+id/ansColor6"
            app:layout_constraintTop_toBottomOf="@id/ansColor1"
            app:layout_constraintStart_toStartOf="@id/gl66"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#000000"
            >
        </View>


        <TextView
            android:id="@+id/tvColor1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="#000000"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text="Color 1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/gl33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvColor4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text="Color 4"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/tvColor1"
            app:layout_constraintStart_toStartOf="@id/tvColor1"
            app:layout_constraintTop_toBottomOf="@id/tvColor1" />


        <TextView
            android:id="@+id/tvColor2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="#000000"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text="Color 2"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/gl66"
            app:layout_constraintStart_toStartOf="@id/gl33"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvColor5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text="Color 5"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/tvColor2"
            app:layout_constraintStart_toStartOf="@id/tvColor2"
            app:layout_constraintTop_toBottomOf="@id/tvColor2" />


        <TextView
            android:id="@+id/tvColor3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="#000000"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text="Color 3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl66"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvColor6"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:gravity="center"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text="Color 6"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/tvColor3"
            app:layout_constraintStart_toStartOf="@id/tvColor3"
            app:layout_constraintTop_toBottomOf="@id/tvColor3" />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ansColor6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="VERIFY"
            android:layout_marginTop="32dp"
            android:id="@+id/btnVerify"
            >
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnVerify"
            android:layout_marginTop="20dp"
            android:text="SCORE: 0"
            android:id="@+id/tvScore"
            android:textColor="#000000"
            android:gravity="center"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>