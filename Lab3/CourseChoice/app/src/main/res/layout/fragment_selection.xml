<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/rbAlgorithm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algorithms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/rbDSA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DSA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbAlgorithm" />

    <CheckBox
        android:id="@+id/rbDBMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DBMS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbDSA" />

    <CheckBox
        android:id="@+id/rbCA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbDBMS" />

    <CheckBox
        android:id="@+id/rbFormalLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formal Languages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbCA" />

    <CheckBox
        android:id="@+id/rbAutomata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbFormalLanguage" />

    <CheckBox
        android:id="@+id/rbML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ML"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbAutomata" />

    <CheckBox
        android:id="@+id/rbAI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbML" />

</androidx.constraintlayout.widget.ConstraintLayout>