<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF7300"
    android:paddingBottom="20dp"
    >

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalConstraint30"
        app:layout_constraintGuide_percent="0.15"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verticalConstraint20"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verticalConstraint80"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="vertical" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontalConstraint30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/tvelcome"
        android:textAllCaps="true"
        android:text="Registration"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        >
    </TextView>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/horizontalConstraint30"
        app:layout_constraintLeft_toLeftOf="@id/etRegName"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#FFFFFF"
        android:id="@+id/tvRegName"
        android:textAllCaps="true"
        android:text="Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:fontFamily="sans-serif-black"
        >

    </TextView>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/tvRegName"
        app:layout_constraintLeft_toLeftOf="@id/verticalConstraint20"
        app:layout_constraintRight_toRightOf="@id/verticalConstraint80"
        android:id="@+id/etRegName"
        android:layout_marginTop="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="#80000000"
        android:background="@drawable/selector_edittext"
        android:textColor="#FFFFFF"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/etRegName"
        app:layout_constraintStart_toStartOf="@id/etRegUsername"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#FFFFFF"
        android:id="@+id/tvRegUsername"
        android:textAllCaps="true"
        android:text="Username"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-black"
        >

    </TextView>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/tvRegUsername"
        app:layout_constraintStart_toStartOf="@id/verticalConstraint20"
        app:layout_constraintEnd_toEndOf="@id/verticalConstraint80"
        android:id="@+id/etRegUsername"
        android:layout_width="0dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:textColorHint="#80000000"
        android:background="@drawable/selector_edittext"
        android:textColor="#FFFFFF"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/etRegUsername"
        app:layout_constraintStart_toStartOf="@id/etRegPass"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#FFFFFF"
        android:id="@+id/tvRegPass"
        android:textAllCaps="true"
        android:text="Password"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-black"
        >

    </TextView>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/tvRegPass"
        app:layout_constraintStart_toStartOf="@id/verticalConstraint20"
        app:layout_constraintEnd_toEndOf="@id/verticalConstraint80"
        android:id="@+id/etRegPass"
        android:layout_width="0dp"
        android:layout_marginTop="2dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:textColorHint="#80000000"
        android:background="@drawable/selector_edittext"
        android:textColor="#FFFFFF"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/etRegPass"
        app:layout_constraintStart_toStartOf="@id/etRegConfirm"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#FFFFFF"
        android:id="@+id/tvRegConfirm"
        android:textAllCaps="true"
        android:text="Confirm Password"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-black"
        >

    </TextView>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/tvRegConfirm"
        app:layout_constraintStart_toStartOf="@id/verticalConstraint20"
        app:layout_constraintEnd_toEndOf="@id/verticalConstraint80"
        android:id="@+id/etRegConfirm"
        android:layout_width="0dp"
        android:layout_marginTop="2dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:textColorHint="#80000000"
        android:background="@drawable/selector_edittext"
        android:textColor="#FFFFFF"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/etRegConfirm"
        app:layout_constraintStart_toStartOf="@id/etRegEmail"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#FFFFFF"
        android:id="@+id/tvRegEmail"
        android:textAllCaps="true"
        android:text="Email"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-black"
        >

    </TextView>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/tvRegEmail"
        app:layout_constraintStart_toStartOf="@id/verticalConstraint20"
        app:layout_constraintEnd_toEndOf="@id/verticalConstraint80"
        android:id="@+id/etRegEmail"
        android:layout_width="0dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:textColorHint="#80000000"
        android:background="@drawable/selector_edittext"
        android:textColor="#FFFFFF"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/etRegEmail"
        app:layout_constraintStart_toStartOf="@id/etRegPhone"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:textColor="#FFFFFF"
        android:id="@+id/tvRegPhone"
        android:textAllCaps="true"
        android:text="Phone num"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-black"
        >

    </TextView>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/tvRegPhone"
        app:layout_constraintStart_toStartOf="@id/verticalConstraint20"
        app:layout_constraintEnd_toEndOf="@id/verticalConstraint80"
        android:id="@+id/etRegPhone"
        android:layout_width="0dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:textColorHint="#80000000"
        android:background="@drawable/selector_edittext"
        android:textColor="#FFFFFF"
        android:inputType="phone"
        />


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/verticalConstraint20"
        app:layout_constraintEnd_toEndOf="@id/verticalConstraint80"
        app:layout_constraintTop_toBottomOf="@id/etRegPhone"
        android:layout_marginTop="32dp"
        android:text="REGISTER"
        android:id="@+id/btnRegistered"
        android:background="@drawable/round_button"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#FF7300"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>